@model SAGWeb.ViewModels.LoginViewModel;
@{
    ViewData["Title"] = "Login";
}
<div class="container mt-5" style="max-width: 400px;">
    <h4 class="text-center mb-4">Login Vendedor</h4>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <form asp-action="Index" method="post">
        <div class="form-group mb-3">
            <label for="Nombre">Nombre</label>
            <input asp-for="Nombre" class="form-control" />
        </div>
        <div class="form-group mb-3">
            <label for="Pin">PIN</label>
            <input asp-for="Pin" class="form-control" type="password" />
        </div>
        <button type="submit" class="btn btn-primary-sagrisa w-100">Ingresar</button>
    </form>
</div>
